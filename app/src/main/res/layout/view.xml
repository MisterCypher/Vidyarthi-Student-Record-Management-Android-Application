<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="5dp">





            <TextView
                android:id="@+id/tvfname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="FullName"
                android:textColor="#FDD835"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvmname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="MothersNAme"
                android:textColor="#FDD835"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="RollNumber"
                android:textColor="#FDD835"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvpersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="Personal Email"
                android:textColor="#FDD835"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvcoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="CollegeEmail"
                android:textColor="#FDD835"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvblood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="BloodGroup"
                android:textColor="#FDD835"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvhob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="Hobbies"
                android:textColor="#FDD835"
                android:textSize="24sp" />





</LinearLayout>

