<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/upfullname"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Enter name here"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/upmothersname"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Enter name here"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/uprollnumber"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Enter number here"
        />


    <EditText
        android:id="@+id/upemail"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Enter id here"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/upcollegeemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter id here"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/upbloodgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter blood group here"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/uphobbies"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:ems="10"
        android:gravity="center|left"
        android:hint="Enter hobbies here"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/upsubmit"
        android:layout_width="208dp"
        android:layout_height="53dp"
        android:text="UPdate"
        />
</LinearLayout>