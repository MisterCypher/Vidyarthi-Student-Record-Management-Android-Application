<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/upcert"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Enter certifications here"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/upsport"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Enter sports here"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/upcourse"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Enter course here"
        />


    <EditText
        android:id="@+id/upseminar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Enter seminar here"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/uprollnumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter rollnumber here"
        android:inputType="textEmailAddress" />
    <Button
        android:id="@+id/upsubmit2"
        android:layout_width="208dp"
        android:layout_height="53dp"
        android:text="UPdate"
        />


</LinearLayout>